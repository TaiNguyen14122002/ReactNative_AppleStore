<div class="container text-center">
    <h2>This is USER HOME</h2>
</div>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong>
                        <%= message.message %>
                    </strong>
                </div>
            <% } %>
            <div class="table-responsive mx-4">
                <% if (users && users.length > 0) { %>
                    <table id="dataTable" class="table table-striped mx-4 text-center">
                        <br>
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index) => { %>
                                <tr class="align-middle">
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <% if (user.addresses && user.addresses.length > 0) { %>
                                            <% user.addresses.forEach((address) => { %>
                                                <p>Mobile No: <%= address.mobileNo %></p>
                                                <p>House No: <%= address.houseNo %></p>
                                                <p>Street: <%= address.street %></p>
                                                <p>Landmark: <%= address.landmark %></p>
                                                <p>Postal Code: <%= address.postalCode %></p>
                                                <hr> <!-- Add a horizontal line between addresses -->
                                            <% }); %>
                                        <% } else { %>
                                            <p>No shipping addresses available.</p>
                                        <% } %>
                                    </td>
                                    <td>
                                        <!-- <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a> -->
                                        <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
